// Свдигать строку вправо, на кол-во символов, задаваемое пользователем. Заколцевать эту схему.

#include <iostream>

using namespace std;

int main()
{
 int n;
 int a[80];
 int b[80];
    
 setlocale(LC_ALL,"rus");
    
 cout<<"Введите сдвиг: "<<endl;
 cin>>n;
    
 for(int i=0;i<80;i++)
   {
    a[i]=i+1    
   }
       
 for(int i=0;i<80;i++)
   {
    if(i+n<80)
      {
       b[i+n]=a[i];
      }
    if(i<n)
      {
       b[i]=a[79-i];
      }
    cout<<b[i]<<";";
   }
       
 return 0;
}
